<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="1000.0" prefWidth="1000.0" stylesheets="@../css/style.css"
            xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="io.javasmithy.controller.LogViewController"
            fx:id="rootPane" styleClass="BorderPane">
    <top>
        <MenuBar BorderPane.alignment="CENTER">
            <menus>
                <Menu mnemonicParsing="false" text="File">
                    <items>
                        <MenuItem mnemonicParsing="false" text="Exit" onAction="#exit" fx:id="exitMenuItem"/>
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Capture">
                    <items>
                        <MenuItem mnemonicParsing="false" text="Capture Single Frame" onAction="#captureSingleImage"
                                  fx:id="capFrameMenuItem"/>
                        <MenuItem mnemonicParsing="false" text="Toggle Continuous Capture" onAction="#toggleContinuous"
                                  fx:id="toggleConCap"/>
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Display">
                    <items>
                        <MenuItem mnemonicParsing="false" text="Display Capture" onAction="#drawCapture"/>
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Edit">
                    <items>
                        <MenuItem mnemonicParsing="false" text="Delete"/>
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Help">
                    <items>
                        <MenuItem mnemonicParsing="false" text="About"/>
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>
    <center>
        <VBox spacing="10" fx:id="vBox">
            <TextArea fx:id="logArea" BorderPane.alignment="center" prefHeight="100" prefWidth="200" editable="false"/>
        </VBox>
    </center>
</BorderPane>

